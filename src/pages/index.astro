---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <section class="bg-blue-600 text-white py-20">
    <div class="container mx-auto text-center">
      <h1 class="text-5xl font-bold mb-4">Welcome to Econ-Hub</h1>
      <p class="text-xl mb-8">Your one-stop-shop for stocks and financial assistance for students.</p>
      <a href="#features" class="bg-white text-blue-600 px-6 py-3 rounded-full font-semibold">Learn More</a>
    </div>
  </section>

  <section id="features" class="py-20">
    <div class="container mx-auto text-center">
      <h2 class="text-4xl font-bold mb-10">Features</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4 dark:text-white">Stock Market Insights</h3>
          <p class="dark:text-gray-300">Get the latest updates and insights on the stock market to help you make informed decisions.</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4 dark:text-white">Financial Courses</h3>
          <p class="dark:text-gray-300">Access a wide range of courses and tutorials to enhance your financial knowledge.</p>
        </div>
        <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
          <h3 class="text-2xl font-bold mb-4 dark:text-white">Student Assistance</h3>
          <p class="dark:text-gray-300">Receive personalized assistance and advice tailored to your financial needs as a student.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>
